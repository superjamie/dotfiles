syntax on
set autoindent
set hidden
set hlsearch
set modeline
set number
set wildmenu

""" statusline
set laststatus=2    " always show the statusline
set statusline=%<[%n]\ %t\ %h%m%r%=%{&ff}\ \|\ %{''.(&fenc!=''?&fenc:&enc).''}\ \|\ %{&ft}\ \ %3p%%\ %4l:%-2c\ "

" E492 Not an editor command
ca Q q 
ca W w 

map q: <Nop>     " disable command history
nnoremap Q <nop> " disable Ex mode

" disable mouse
autocmd BufEnter * set mouse=
" remove highlights
nnoremap <leader>h :nohl<CR>:match none<CR>:call clearmatches()<CR> :<Esc>
" toggle line numbers
nnoremap <leader>n :set number!<CR>:set number?<CR>
" toggle paste mode
nnoremap <leader>p :set paste!<CR>:set paste?<CR>
" toggle relative line numbers
nnoremap <leader>r :set relativenumber!<CR>:set relativenumber?<CR>
